
<%- include("../partials/header") %>


    <div class = "row">
        <div class = "col-md-3">
            <p class = "lead">
                Matrimonial
            </p>
            <div class = "list-group">
                <li class = "list-group-item active ">Info 1</li>
                <li class = "list-group-item">Info 2</li>
                <li class = "list-group-item">Info 3</li>
            </div>
        </div>
        <div class ="col-md-9">
            <div class = "thumbnail">
                <img class = "img-responsive" src = "<%= bachelor.image %> ">
                <div class = "caption-full">
                    <h4 class = "pull-right">Engineer</h4>
                    <h4><a href=""><%= bachelor.name %></a> </h4>
                    <p> <%= bachelor.description %> </p>
                    <p> 
                        <em>Submitted By  <%= bachelor.author.username %></em> 
                    </p>
                    <% if(currentUser && bachelor.author.id.equals(currentUser._id)){ %>
                        <a class = "btn btn-warning" href= "/bachelors/<%= bachelor._id %>/edit"> Edit </a>
                        <form style= "display: inline;" action = "/bachelors/<%= bachelor._id %>?_method=delete " method = "POST">
                            <button class = "btn btn-xs btn-danger"> Delete </button>
                        </form>
                    <% } %>
                    
                </div>
            </div>
            <div class = "well">
                <div class = "text-right">
                    <a class = "btn btn-success" href = "/bachelors/<%= bachelor._id %>/comments/new">Add New Comment</a>
                </div>
                <% bachelor.comments.forEach(function(comment){ %>
                  <div class = "row">
                      <div class = "col-md-12">
                            <strong> <%= comment.author.username %> </strong> 
                            <span class = "pull-right">10 days ago </span>
                            <p>
                                <%= comment.text %>
                            </p>
                            <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
                                <a class = "btn btn-xs btn-warning" 
                                    href = "/bachelors/<%=bachelor._id%>/comments/<%=comment._id%>/edit">
                                    Edit
                                </a>
                                <form style= "display: inline;" action = "/bachelors/<%=bachelor._id%>/comments/<%=comment._id%>?_method=DELETE" method= "POST">
                                    <input type = "submit" class = "btn btn-xs btn-danger" value="Delete">
                                </form>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>





<%- include("../partials/footer") %>